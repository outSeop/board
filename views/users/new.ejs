<!DOCTYPE html>
<html>
  <head>
	<script src="/tjs/verify.js"></script>
	<script src="/tjs/inputData.js"></script>
	<script src="/tjs/verifyClass.js"></script>
    <%- include('../partials/head') %>
  </head>
  <body>
    <%- include('../partials/nav') %>

    <div class="container mb-3">

      <h3 class="contentBoxTop mb-3">New User</h3>


	<div class="form-group row">
		<label for="username" class="col-sm-3 col-form-label">Username*</label>
		<div class="col-sm-7">
		<input type="text" id="username" name="username" value="" class="signup-input" onchange="verify()">
		<span class="input-error" id="username-error"></span>
		</div>
	</div>
	<div class="form-group row">
		<label for="name" class="col-sm-3 col-form-label">Name*</label>
		<div class="col-sm-7">
		<input type="text" id="name" name="name" value="" class="signup-input" onchange="verifyName()">
		<span class="input-error" id="name-error"></span>
		</div>
	</div>
	<div class="form-group row">
		<label for="email" class="col-sm-3 col-form-label">Email</label>
		<div class="col-sm-7">
		<input type="text" id="email" name="email" value=""   class="signup-input" onchange="verifyEmail()">
		<span class="input-error" id="email-error"></span>
		</div>
	</div>
	<div class="form-group row">
		<label for="password" class="col-sm-3 col-form-label">Password*</label>
		<div class="col-sm-7">
		<input type="password" id="password" name="password" value=""   class="signup-input" onchange="verifyPassword()">
		<span class="input-error" id="password-error"></span>
		</div>
	</div>
	<div class="form-group row">
		<label for="passwordConfirmation" class="col-sm-3 col-form-label">Password Confirmation*</label>
		<div class="col-sm-7 col-sm-offset-3">
		<input type="password" id="passwordConfirmation" name="passwordConfirmation" value=""  class="signup-input" onchange="verifyPasswordConfirmation()">
		<span class="input-error" id="passwordConfirmation-error"></span>
		</div>
	</div>
	<p>
		<small>*Required</small>
	</p>

	<div class="form-group">
		<button type="button" class="btn btn-primary" onclick="verify42()">Submit</button>
		<span class="input-error" id="submit-error"></span>
	</div>

    </div>
  </body>
</html>